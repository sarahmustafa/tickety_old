<h1>Listing bookings</h1>

<table>
  <tr>
    <th>Booking date</th>
    <th>Customer</th>
    <th>Show time</th>
    <th>Movie</th>
    <th>Cinema</th>
    <th>Payment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bookings.each do |booking| %>
  <tr>
    <td><%= booking.booking_date %></td>
    <td><%= booking.customer_id %></td>
    <td><%= booking.show_time %></td>
    <td><%= booking.movie_id %></td>
    <td><%= booking.cinema_id %></td>
    <td><%= booking.payment_id %></td>
    <td><%= link_to 'Show', booking %></td>
    <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
    <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

